{
    "format_version": "1.10.0",
    "minecraft:attachable": {
      "description": {
        "identifier": "hog:space_helmet.player",
        "item": { "hog:space_helmet": "query.is_owner_identifier_any('minecraft:player')" },
        "materials": {
          "default": "armor",
          "enchanted": "armor_enchanted"
        },
        "textures": {
          "default": "textures/models/armor/space_suit_main",
          "enchanted": "textures/misc/enchanted_actor_glint"
        },
        "geometry": {
          "default": "geometry.space_suit_helmet"
        },
        "scripts": {
          "parent_setup": "variable.helmet_layer_visible = 0.0;",
          "animate": [
            "offset"
          ]
        },
        "animations": {
          "offset": "animation.armor.helmet.offset"
        },
        "render_controllers": [ "controller.render.armor" ]
      }
    }
  }
  